<?xml version="1.0"?>
<skin name="white_close_button_skin" version="0.0">

	<!-- shared variables -->
	
	<variables>
		<variable key="asset"	value="habbo_bitmap_skin_png"	type="String" />
	</variables>
	
	<!-- the following maps layouts for render states -->
	
	<states>
		<state name="default" layout="button_close_white" template="default_close_button_white" />
		<state name="active"  layout="button_close_white" template="default_close_button_white" />
		<state name="pressed" layout="button_close_white" template="default_close_button_white" />
	</states>
	
	<!-- templates defines regions in bitmap asset -->
	
	<templates>
		<template name="default_close_button_white" asset="$asset">
			<entities>
				<entity name="button_close" type="bitmap"><region><Rectangle x="377" y="216"  width="15" height="15" /></region></entity>
			</entities>
		</template>	
	</templates>
	
	<!-- markup for layout drawer -->
	
	<layouts>
		<layout name="button_close_white" transparent="false">
			<entities>
				<entity name="button_close" id="0">
					<region><Rectangle x="0" y="0" width="15" height="15" /></region>
					<scale horizontal="fixed" vertical="fixed" />
				</entity>
			</entities>
		</layout>
	</layouts>
</skin>