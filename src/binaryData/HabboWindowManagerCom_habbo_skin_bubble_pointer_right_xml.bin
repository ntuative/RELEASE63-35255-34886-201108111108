<?xml version="1.0"?>
<skin name="bubble_pointer_right_skin" version="0.0">

	<!-- shared variables -->
	
	<variables>
		<variable key="asset" value="habbo_bitmap_skin2_png" type="String" />
	</variables>
	
	<!-- the following maps layouts for render states -->

	<states>
        <state name="default" layout="pointer_right" template="default_pointer_right" />
	</states>

	<!-- templates defines regions in bitmap asset -->
	
	<templates>
        <template name="default_pointer_right" asset="$asset">
			<entities>
				<entity name="pointer" type="bitmap"><region><Rectangle x="120" y= "230" width="8" height="13" /></region></entity>
            </entities>
		</template>
	</templates>
	
	<!-- markup for layout drawer -->
	
	<layouts>
        <layout name="pointer_right" transparent="true">
			<entities>
                <entity name="pointer"><region><Rectangle x="0" y="0" width="8" height="13" /></region><scale horizontal="fixed" vertical="center" /></entity>
            </entities>
		</layout>
	</layouts>
</skin>