<?xml version="1.0"?>
<skin name="border_4" version="0.0">

	<!-- shared variables -->
	
	<variables>
		<variable key="asset"	value="habbo_bitmap_skin_png"	type="String" />
	</variables>
	
	<!-- the following maps layouts for render states -->
	
	<states>
		<state name="default"  layout="border_4" template="border_4" />
		<state name="active"   layout="border_4" template="border_4" />
		<!--
		<state name="pressed"  layout="border_outline" template="default_border" />
		<state name="selected" layout="border_outline" template="default_border" />
		-->
	</states>
	
	<!-- templates defines regions in bitmap asset -->
	
	<templates>
		
		<template name="border_4" asset="$asset">
			<entities>
				<entity name="top_left"	  type="bitmap"><region><Rectangle x="0"  y="73" width="6" height="6" /></region></entity>
				<entity name="top_center" type="bitmap"><region><Rectangle x="7"  y="73" width="1" height="6" /></region></entity>
				<entity name="top_right"  type="bitmap"><region><Rectangle x="12"  y="73" width="6" height="6" /></region></entity>

				<entity name="mid_left"	  type="bitmap"><region><Rectangle x="0"  y="81" width="6" height="1" /></region></entity>
				<entity name="mid_center" type="bitmap"><region><Rectangle x="7"  y="81" width="1" height="1" /></region></entity>
				<entity name="mid_right"  type="bitmap"><region><Rectangle x="12"  y="81" width="6" height="1" /></region></entity>

				<entity name="btm_left"	  type="bitmap"><region><Rectangle x="0"  y="85" width="6" height="6" /></region></entity>
				<entity name="btm_center" type="bitmap"><region><Rectangle x="6"  y="85" width="1" height="6" /></region></entity>
				<entity name="btm_right"  type="bitmap"><region><Rectangle x="12"  y="85" width="6" height="6" /></region></entity>
			</entities>
		</template>
		
	</templates>
	
	<!-- markup for layout drawer -->
	
	<layouts>
		<layout name="border_4" transparent="true">
			<entities>

				<!-- top left -->
				
				<entity name="top_left" id="0">
					<region><Rectangle x="0" y="0" width="6" height="6" /></region>
					<scale horizontal="fixed" vertical="fixed" />
				</entity>
				
				<!-- top center -->
				
				<entity name="top_center" id="0">
					<region><Rectangle x="6"  y="0" width="20" height="6" /></region>
					<scale horizontal="strech" vertical="fixed" />
				</entity>
				
				<!-- top right -->
				
				<entity name="top_right" id="0">
					<region><Rectangle x="26" y="0" width="6" height="6" /></region>
					<scale horizontal="move" vertical="fixed" />
				</entity>
				
				<!-- mid left -->
				
				<entity name="mid_left" id="0">
					<region><Rectangle x="0" y="6" width="6" height="10" /></region>
					<scale horizontal="fixed" vertical="strech" />
				</entity>
				
				<!-- mid center -->
				
				<entity name="mid_center" id="0">
					<region><Rectangle x="6" y="6" width="20" height="10" /></region>
					<scale horizontal="strech" vertical="strech" />
				</entity>
				
				<!-- mid right -->
				
				<entity name="mid_right" id="0">
					<region><Rectangle x="26" y="6" width="6" height="10" /></region>
					<scale horizontal="move" vertical="strech" />
				</entity>
				
				<!-- btm left -->
				
				<entity name="btm_left" id="0">
					<region><Rectangle x="0" y="16" width="6" height="6" /></region>
					<scale horizontal="fixed" vertical="move" />
				</entity>
				
				<!-- btm center -->
				
				<entity name="btm_center" id="0">
					<region><Rectangle x="6"  y="16" width="20" height="6" /></region>
					<scale horizontal="strech" vertical="move" />
				</entity>
				
				<!-- btm right -->
				
				<entity name="btm_right" id="0">
					<region><Rectangle x="26" y="16" width="6" height="6" /></region>
					<scale horizontal="move" vertical="move" />
				</entity>
				
			</entities>
			
		</layout>
	</layouts>
</skin>