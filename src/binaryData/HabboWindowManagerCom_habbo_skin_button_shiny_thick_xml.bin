<?xml version="1.0"?>
<skin name="thick_button_shiny_skin" version="0.0">

	<!-- shared variables -->
	
	<variables>
		<variable key="asset"	value="habbo_bitmap_skin_png"	type="String" />
	</variables>
	
	<!-- the following maps layouts for render states -->
	
	<states>
		<state name="default"  layout="button_shiny_thick" template="default_button_shiny_thick" />
		<!-- <state name="active"   layout="button_thick" template="default_button_thick" /> -->
		<state name="disabled" layout="button_shiny_thick" template="disabled_button_shiny_thick" />
		<state name="pressed"  layout="button_shiny_thick" template="pressed_button_shiny_thick" />
		<state name="hovering" layout="button_shiny_thick" template="hovering_button_shiny_thick" />
	</states>
	
	<!-- templates defines regions in bitmap asset -->
	
	<templates>
		<template name="default_button_shiny_thick" asset="$asset">
			<entities>
				<entity name="top_left"	  type="bitmap"><region><Rectangle x="32" y="50"  width="5" height="5" /></region></entity>
				<entity name="mid_left"	  type="bitmap"><region><Rectangle x="32" y="55"  width="5" height="14" /></region></entity>
				<entity name="btm_left"   type="bitmap"><region><Rectangle x="32" y="69" width="5" height="5" /></region></entity>
				<entity name="top_center" type="bitmap"><region><Rectangle x="37" y="50"  width="1" height="5" /></region></entity>
				<entity name="mid_center" type="bitmap"><region><Rectangle x="37" y="55"  width="1" height="14" /></region></entity>
				<entity name="btm_center" type="bitmap"><region><Rectangle x="37" y="69" width="1" height="5" /></region></entity>
				<entity name="top_right"  type="bitmap"><region><Rectangle x="38" y="50"  width="5" height="5" /></region></entity>
				<entity name="mid_right"  type="bitmap"><region><Rectangle x="38" y="55"  width="5" height="14" /></region></entity>
				<entity name="btm_right"  type="bitmap"><region><Rectangle x="38" y="69" width="5" height="5" /></region></entity>
			</entities>
		</template>
		
		<template name="disabled_button_shiny_thick" asset="$asset">
			<entities>
				<entity name="top_left"	  type="bitmap"><region><Rectangle x="69" y="50"  width="5" height="5" /></region></entity>
				<entity name="mid_left"	  type="bitmap"><region><Rectangle x="69" y="55"  width="5" height="14" /></region></entity>
				<entity name="btm_left"   type="bitmap"><region><Rectangle x="69" y="69" width="5" height="5" /></region></entity>
				<entity name="top_center" type="bitmap"><region><Rectangle x="74" y="50"  width="1" height="5" /></region></entity>
				<entity name="mid_center" type="bitmap"><region><Rectangle x="74" y="55"  width="1" height="14" /></region></entity>
				<entity name="btm_center" type="bitmap"><region><Rectangle x="74" y="69" width="1" height="5" /></region></entity>
				<entity name="top_right"  type="bitmap"><region><Rectangle x="75" y="50"  width="5" height="5" /></region></entity>
				<entity name="mid_right"  type="bitmap"><region><Rectangle x="75" y="55"  width="5" height="14" /></region></entity>
				<entity name="btm_right"  type="bitmap"><region><Rectangle x="75" y="69" width="5" height="5" /></region></entity>
			</entities>
		</template>
		
		<template name="pressed_button_shiny_thick" asset="$asset">
			<entities>
				<entity name="top_left"	  type="bitmap"><region><Rectangle x="57" y="50"  width="5" height="5" /></region></entity>
				<entity name="mid_left"	  type="bitmap"><region><Rectangle x="57" y="55"  width="5" height="14" /></region></entity>
				<entity name="btm_left"   type="bitmap"><region><Rectangle x="57" y="69" width="5" height="5" /></region></entity>
				<entity name="top_center" type="bitmap"><region><Rectangle x="62" y="50"  width="1" height="5" /></region></entity>
				<entity name="mid_center" type="bitmap"><region><Rectangle x="62" y="55"  width="1" height="14" /></region></entity>
				<entity name="btm_center" type="bitmap"><region><Rectangle x="62" y="69" width="1" height="5" /></region></entity>
				<entity name="top_right"  type="bitmap"><region><Rectangle x="63" y="50"  width="5" height="5" /></region></entity>
				<entity name="mid_right"  type="bitmap"><region><Rectangle x="63" y="55"  width="5" height="14" /></region></entity>
				<entity name="btm_right"  type="bitmap"><region><Rectangle x="63" y="69" width="5" height="5" /></region></entity>
			</entities>
		</template>
		
		<template name="hovering_button_shiny_thick" asset="$asset">
			<entities>
				<entity name="top_left"	  type="bitmap"><region><Rectangle x="44" y="50"  width="5" height="5" /></region></entity>
				<entity name="mid_left"	  type="bitmap"><region><Rectangle x="44" y="55"  width="5" height="14" /></region></entity>
				<entity name="btm_left"   type="bitmap"><region><Rectangle x="44" y="69" width="5" height="5" /></region></entity>
				<entity name="top_center" type="bitmap"><region><Rectangle x="49" y="50"  width="1" height="5" /></region></entity>
				<entity name="mid_center" type="bitmap"><region><Rectangle x="49" y="55"  width="1" height="14" /></region></entity>
				<entity name="btm_center" type="bitmap"><region><Rectangle x="49" y="69" width="1" height="5" /></region></entity>
				<entity name="top_right"  type="bitmap"><region><Rectangle x="51" y="50"  width="5" height="5" /></region></entity>
				<entity name="mid_right"  type="bitmap"><region><Rectangle x="51" y="55"  width="5" height="14" /></region></entity>
				<entity name="btm_right"  type="bitmap"><region><Rectangle x="51" y="69" width="5" height="5" /></region></entity>
			</entities>
		</template>
	</templates>
	
	<!-- markup for layout drawer -->
	
	<layouts>
		<layout name="button_shiny_thick" transparent="true">
			<entities>

				<!-- left -->
				
				<entity name="top_left" id="0">
					<region><Rectangle x="0" y="0" width="5" height="5" /></region>
					<scale horizontal="fixed" vertical="fixed" />
				</entity>

				<entity name="mid_left" id="0">
					<region><Rectangle x="0" y="5" width="5" height="14" /></region>
					<scale horizontal="fixed" vertical="strech" />
				</entity>
				
				<entity name="btm_left" id="0">
					<region><Rectangle x="0" y="19" width="5" height="5" /></region>
					<scale horizontal="fixed" vertical="move" />
				</entity>
				
				<!-- center -->
				
				<entity name="top_center" id="1">
					<region><Rectangle x="5"  y="0" width="1" height="5" /></region>
					<scale horizontal="strech" vertical="fixed" />
				</entity>
				
				<entity name="mid_center" id="1">
					<region><Rectangle x="5"  y="5" width="1" height="14" /></region>
					<scale horizontal="strech" vertical="strech" />
				</entity>
				
				<entity name="btm_center" id="1">
					<region><Rectangle x="5"  y="19" width="1" height="5" /></region>
					<scale horizontal="strech" vertical="move" />
				</entity>
				
				<!-- right -->
				
				<entity name="top_right" id="2">
					<region><Rectangle x="6" y="0" width="5" height="5" /></region>
					<scale horizontal="move" vertical="fixed" />
				</entity>
	
				<entity name="mid_right" id="2">
					<region><Rectangle x="6" y="5" width="5" height="14" /></region>
					<scale horizontal="move" vertical="strech" />
				</entity>
				
				<entity name="btm_right" id="2">
					<region><Rectangle x="6" y="19" width="5" height="5" /></region>
					<scale horizontal="move" vertical="move" />
				</entity>
				
			</entities>
		</layout>
	</layouts>
</skin>