<?xml version="1.0"?>
<skin name="button_group_center_skin" version="0.0">

	<!-- shared variables -->
	
	<variables>
		<variable key="asset"	value="habbo_bitmap_skin_png"	type="String" />
	</variables>
	
	<!-- the following maps layouts for render states -->
	
	<states>
		<state name="default"  layout="button_group_center" template="default_button_group_center" />
		<!-- <state name="active"   layout="button_group_center" template="default_button_group_center" /> -->
		<state name="pressed"  layout="button_group_center" template="selected_button_group_center" />
		<state name="selected" layout="button_group_center" template="selected_button_group_center" />
		<state name="disabled" layout="button_group_center" template="disabled_button_group_center" />
		<state name="hovering" layout="button_group_center" template="hovering_button_group_center" />
	</states>
	
	<!-- templates defines regions in bitmap asset -->
	
	<templates>
		<template name="default_button_group_center" asset="$asset">
			<entities>
				<entity name="top_left"	  type="bitmap"><region><Rectangle x="90" y="22" width="1" height="3" /></region></entity>
				<entity name="mid_left"	  type="bitmap"><region><Rectangle x="90" y="25" width="1" height="1" /></region></entity>
				<entity name="btm_left"   type="bitmap"><region><Rectangle x="90" y="41" width="1" height="3" /></region></entity>
				<entity name="top_center" type="bitmap"><region><Rectangle x="91" y="22" width="1" height="3" /></region></entity>
				<entity name="mid_center" type="bitmap"><region><Rectangle x="91" y="25" width="1" height="1" /></region></entity>
				<entity name="btm_center" type="bitmap"><region><Rectangle x="91" y="41" width="1" height="3" /></region></entity>
				<entity name="top_right"  type="bitmap"><region><Rectangle x="95" y="22" width="3" height="3" /></region></entity>
				<entity name="mid_right"  type="bitmap"><region><Rectangle x="95" y="25" width="3" height="1" /></region></entity>
				<entity name="btm_right"  type="bitmap"><region><Rectangle x="95" y="41" width="3" height="3" /></region></entity>
			</entities>
		</template>
		
		<template name="disabled_button_group_center" asset="$asset">
			<entities>
				<entity name="top_left"	  type="bitmap"><region><Rectangle x="100" y="22" width="1" height="3" /></region></entity>
				<entity name="mid_left"	  type="bitmap"><region><Rectangle x="100" y="25" width="1" height="1" /></region></entity>
				<entity name="btm_left"   type="bitmap"><region><Rectangle x="100" y="41" width="1" height="3" /></region></entity>
				<entity name="top_center" type="bitmap"><region><Rectangle x="101" y="22" width="1" height="3" /></region></entity>
				<entity name="mid_center" type="bitmap"><region><Rectangle x="101" y="25" width="1" height="1" /></region></entity>
				<entity name="btm_center" type="bitmap"><region><Rectangle x="101" y="41" width="1" height="3" /></region></entity>
				<entity name="top_right"  type="bitmap"><region><Rectangle x="105" y="22" width="3" height="3" /></region></entity>
				<entity name="mid_right"  type="bitmap"><region><Rectangle x="105" y="25" width="3" height="1" /></region></entity>
				<entity name="btm_right"  type="bitmap"><region><Rectangle x="105" y="41" width="3" height="3" /></region></entity>
			</entities>
		</template>
		
		<template name="selected_button_group_center" asset="$asset">
			<entities>
				<entity name="top_left"	  type="bitmap"><region><Rectangle x="110" y="22" width="1" height="3" /></region></entity>
				<entity name="mid_left"	  type="bitmap"><region><Rectangle x="110" y="25" width="1" height="1" /></region></entity>
				<entity name="btm_left"   type="bitmap"><region><Rectangle x="110" y="41" width="1" height="3" /></region></entity>
				<entity name="top_center" type="bitmap"><region><Rectangle x="111" y="22" width="1" height="3" /></region></entity>
				<entity name="mid_center" type="bitmap"><region><Rectangle x="111" y="25" width="1" height="1" /></region></entity>
				<entity name="btm_center" type="bitmap"><region><Rectangle x="111" y="41" width="1" height="3" /></region></entity>
				<entity name="top_right"  type="bitmap"><region><Rectangle x="115" y="22" width="3" height="3" /></region></entity>
				<entity name="mid_right"  type="bitmap"><region><Rectangle x="115" y="25" width="3" height="1" /></region></entity>
				<entity name="btm_right"  type="bitmap"><region><Rectangle x="115" y="41" width="3" height="3" /></region></entity>
			</entities>
		</template>
		
		<template name="hovering_button_group_center" asset="$asset">
			<entities>
				<entity name="top_left"	  type="bitmap"><region><Rectangle x="110" y="46" width="1" height="3" /></region></entity>
				<entity name="mid_left"	  type="bitmap"><region><Rectangle x="110" y="49" width="1" height="1" /></region></entity>
				<entity name="btm_left"   type="bitmap"><region><Rectangle x="110" y="65" width="1" height="3" /></region></entity>
				<entity name="top_center" type="bitmap"><region><Rectangle x="111" y="46" width="1" height="3" /></region></entity>
				<entity name="mid_center" type="bitmap"><region><Rectangle x="111" y="49" width="1" height="1" /></region></entity>
				<entity name="btm_center" type="bitmap"><region><Rectangle x="111" y="65" width="1" height="3" /></region></entity>
				<entity name="top_right"  type="bitmap"><region><Rectangle x="115" y="46" width="3" height="3" /></region></entity>
				<entity name="mid_right"  type="bitmap"><region><Rectangle x="115" y="49" width="3" height="1" /></region></entity>
				<entity name="btm_right"  type="bitmap"><region><Rectangle x="115" y="65" width="3" height="3" /></region></entity>
			</entities>
		</template>
	</templates>
	
	<!-- markup for layout drawer -->
	
	<layouts>
		<layout name="button_group_center" transparent="true">
			<entities>

				<!-- left -->

				<entity name="top_left" id="0">
					<region><Rectangle x="0" y="0" width="1" height="3" /></region>
					<scale horizontal="fixed" vertical="fixed" />
				</entity>

				<entity name="mid_left" id="0">
					<region><Rectangle x="0" y="3" width="1" height="16" /></region>
					<scale horizontal="fixed" vertical="strech" />
				</entity>
				
				<entity name="btm_left" id="0">
					<region><Rectangle x="0" y="19" width="1" height="3" /></region>
					<scale horizontal="fixed" vertical="move" />
				</entity>
	
				<!-- center -->
				
				<entity name="top_center" id="1">
					<region><Rectangle x="1"  y="0" width="1" height="3" /></region>
					<scale horizontal="strech" vertical="fixed" />
				</entity>
				
				<entity name="mid_center" id="1">
					<region><Rectangle x="1"  y="3" width="1" height="16" /></region>
					<scale horizontal="strech" vertical="strech" />
				</entity>
				
				<entity name="btm_center" id="1">
					<region><Rectangle x="1"  y="19" width="1" height="3" /></region>
					<scale horizontal="strech" vertical="move" />
				</entity>
				
				<!-- right -->
				
				<entity name="top_right" id="2">
					<region><Rectangle x="2" y="0" width="3" height="3" /></region>
					<scale horizontal="move" vertical="fixed" />
				</entity>
	
				<entity name="mid_right" id="2">
					<region><Rectangle x="2" y="3" width="3" height="16" /></region>
					<scale horizontal="move" vertical="strech" />
				</entity>
				
				<entity name="btm_right" id="2">
					<region><Rectangle x="2" y="19" width="3" height="3" /></region>
					<scale horizontal="move" vertical="move" />
				</entity>
				
			</entities>
		</layout>
	</layouts>
</skin>