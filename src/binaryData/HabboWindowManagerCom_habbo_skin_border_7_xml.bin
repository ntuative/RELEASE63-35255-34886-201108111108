<?xml version="1.0"?>
<skin name="border_7" version="0.0">

	<!-- shared variables -->
	
	<variables>
		<variable key="asset"	value="habbo_bitmap_skin2_png"	type="String" />
	</variables>
	
	<!-- the following maps layouts for render states -->
	
	<states>
		<state name="default"  layout="border_7" template="border_7" />
		<state name="active"   layout="border_7" template="border_7" />
		<!--
		<state name="pressed"  layout="border_outline" template="default_border" />
		<state name="selected" layout="border_outline" template="default_border" />
		-->
	</states>
	
	<!-- templates defines regions in bitmap asset -->
	
	<templates>
		
		<template name="border_7" asset="$asset">
			<entities>
				<entity name="top_left" type="bitmap"><region><Rectangle x="10" y= "190" width="6" height="6" /></region></entity>
				<entity name="top_center" type="bitmap"><region><Rectangle x="16" y= "190" width="6" height="6" /></region></entity>
				<entity name="top_right" type="bitmap"><region><Rectangle x="29" y= "190" width="6" height="6" /></region></entity>

				<entity name="mid_left" type="bitmap"><region><Rectangle x="10" y= "196" width="6" height="6" /></region></entity>
				<entity name="mid_center" type="bitmap"><region><Rectangle x="16" y= "196" width="6" height="6" /></region></entity>
				<entity name="mid_right" type="bitmap"><region><Rectangle x="29" y= "196" width="6" height="6" /></region></entity>

				<entity name="btm_left" type="bitmap"><region><Rectangle x="10" y= "205" width="6" height="7" /></region></entity>
				<entity name="btm_center" type="bitmap"><region><Rectangle x="16" y= "205" width="6" height="7" /></region></entity>
				<entity name="btm_right" type="bitmap"><region><Rectangle x="29" y= "205" width="6" height="7" /></region></entity>
			</entities>
		</template>
		
	</templates>
	
	<!-- markup for layout drawer -->
	
	<layouts>
		<layout name="border_7" transparent="true">
			<entities>

				<!-- top left -->
				
				<entity name="top_left" id="0">
					<region><Rectangle x="0" y="0" width="6" height="6" /></region>
					<scale horizontal="fixed" vertical="fixed" />
				</entity>
				
				<!-- top center -->
				
				<entity name="top_center" id="0">
					<region><Rectangle x="6"  y="0" width="6" height="6" /></region>
					<scale horizontal="strech" vertical="fixed" />
				</entity>
				
				<!-- top right -->
				
				<entity name="top_right" id="0">
					<region><Rectangle x="12" y="0" width="6" height="6" /></region>
					<scale horizontal="move" vertical="fixed" />
				</entity>
				
				<!-- mid left -->
				
				<entity name="mid_left" id="0">
					<region><Rectangle x="0" y="6" width="6" height="6" /></region>
					<scale horizontal="fixed" vertical="strech" />
				</entity>
				
				<!-- mid center -->
				
				<entity name="mid_center" id="0">
					<region><Rectangle x="6" y="6" width="6" height="6" /></region>
					<scale horizontal="strech" vertical="strech" />
				</entity>
				
				<!-- mid right -->
				
				<entity name="mid_right" id="0">
					<region><Rectangle x="12" y="6" width="6" height="6" /></region>
					<scale horizontal="move" vertical="strech" />
				</entity>
				
				<!-- btm left -->
				
				<entity name="btm_left" id="0">
					<region><Rectangle x="0" y="12" width="6" height="7" /></region>
					<scale horizontal="fixed" vertical="move" />
				</entity>
				
				<!-- btm center -->
				
				<entity name="btm_center" id="0">
					<region><Rectangle x="6"  y="12" width="6" height="7" /></region>
					<scale horizontal="strech" vertical="move" />
				</entity>
				
				<!-- btm right -->
				
				<entity name="btm_right" id="0">
					<region><Rectangle x="12" y="12" width="6" height="7" /></region>
					<scale horizontal="move" vertical="move" />
				</entity>
				
			</entities>
			
		</layout>
	</layouts>
</skin>