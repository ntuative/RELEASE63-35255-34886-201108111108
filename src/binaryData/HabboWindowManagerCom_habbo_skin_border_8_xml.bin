<?xml version="1.0"?>
<skin name="border_8" version="0.0">

	<!-- shared variables -->
	
	<variables>
		<variable key="asset"	value="habbo_bitmap_skin2_png"	type="String" />
	</variables>
	
	<!-- the following maps layouts for render states -->
	
	<states>
		<state name="default"  layout="border_8" template="border_8" />
	</states>
	
	<!-- templates defines regions in bitmap asset -->
	
	<templates>
		
		<template name="border_8" asset="$asset">
			<entities>
				<entity name="top_left" type="bitmap"><region><Rectangle x="10" y= "140" width="10" height="10" /></region></entity>
				<entity name="top_center" type="bitmap"><region><Rectangle x="20" y= "140" width="14" height="10" /></region></entity>
				<entity name="top_right" type="bitmap"><region><Rectangle x="34" y= "140" width="10" height="10" /></region></entity>

				<entity name="mid_left" type="bitmap"><region><Rectangle x="10" y= "150" width="10" height="14" /></region></entity>
				<entity name="mid_center" type="bitmap"><region><Rectangle x="20" y= "150" width="14" height="14" /></region></entity>
				<entity name="mid_right" type="bitmap"><region><Rectangle x="34" y= "150" width="10" height="14" /></region></entity>

				<entity name="btm_left" type="bitmap"><region><Rectangle x="10" y= "164" width="10" height="10" /></region></entity>
				<entity name="btm_center" type="bitmap"><region><Rectangle x="20" y= "164" width="14" height="10" /></region></entity>
				<entity name="btm_right" type="bitmap"><region><Rectangle x="34" y= "164" width="10" height="10" /></region></entity>

			</entities>
		</template>
		
	</templates>
	
	<!-- markup for layout drawer -->
	
	<layouts>
		<layout name="border_8" transparent="true">
			<entities>

				<!-- top left -->
				
				<entity name="top_left" id="0">
					<region><Rectangle x="0" y="0" width="10" height="10" /></region>
					<scale horizontal="fixed" vertical="fixed" />
				</entity>
				
				<!-- top center -->
				
				<entity name="top_center" id="0">
					<region><Rectangle x="10"  y="0" width="14" height="10" /></region>
					<scale horizontal="strech" vertical="fixed" />
				</entity>
				
				<!-- top right -->
				
				<entity name="top_right" id="0">
					<region><Rectangle x="24" y="0" width="10" height="10" /></region>
					<scale horizontal="move" vertical="fixed" />
				</entity>
				
				<!-- mid left -->
				
				<entity name="mid_left" id="0">
					<region><Rectangle x="0" y="10" width="10" height="14" /></region>
					<scale horizontal="fixed" vertical="strech" />
				</entity>
				
				<!-- mid center -->
				
				<entity name="mid_center" id="0">
					<region><Rectangle x="10" y="10" width="14" height="14" /></region>
					<scale horizontal="strech" vertical="strech" />
				</entity>
				
				<!-- mid right -->
				
				<entity name="mid_right" id="0">
					<region><Rectangle x="24" y="10" width="10" height="14" /></region>
					<scale horizontal="move" vertical="strech" />
				</entity>
				
				<!-- btm left -->
				
				<entity name="btm_left" id="0">
					<region><Rectangle x="0" y="24" width="10" height="10" /></region>
					<scale horizontal="fixed" vertical="move" />
				</entity>
				
				<!-- btm center -->
				
				<entity name="btm_center" id="0">
					<region><Rectangle x="10"  y="24" width="14" height="10" /></region>
					<scale horizontal="strech" vertical="move" />
				</entity>
				
				<!-- btm right -->
				
				<entity name="btm_right" id="0">
					<region><Rectangle x="24" y="24" width="10" height="10" /></region>
					<scale horizontal="move" vertical="move" />
				</entity>
				
			</entities>
			
		</layout>
	</layouts>
</skin>