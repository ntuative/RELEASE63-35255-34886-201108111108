<?xml version="1.0"?>
<skin name="large_button_shiny_skin" version="0.0">

	<!-- shared variables -->
	
	<variables>
		<variable key="asset"	value="habbo_bitmap_skin2_png"	type="String" />
	</variables>
	
	<!-- the following maps layouts for render states -->
	
	<states>
		<state name="default"  layout="button_shiny_large" template="default_button_shiny_large" />
		<state name="pressed"  layout="button_shiny_large" template="pressed_button_shiny_large" />
		<state name="hovering" layout="button_shiny_large" template="hovering_button_shiny_large" />
		<state name="disabled" layout="button_shiny_large" template="disabled_button_shiny_large" />
	</states>
	
	<!-- templates defines regions in bitmap asset -->
	
	<templates>
		<template name="default_button_shiny_large" asset="$asset">
			<entities>
				<entity name="top_left" type="bitmap"><region><Rectangle x="110" y= "190" width="6" height="6" /></region></entity>
				<entity name="mid_left" type="bitmap"><region><Rectangle x="110" y= "196" width="6" height="21" /></region></entity>
				<entity name="btm_left" type="bitmap"><region><Rectangle x="110" y= "217" width="6" height="7" /></region></entity>

				<entity name="top_center" type="bitmap"><region><Rectangle x="116" y= "190" width="8" height="6" /></region></entity>
				<entity name="mid_center" type="bitmap"><region><Rectangle x="116" y= "196" width="8" height="21" /></region></entity>
				<entity name="btm_center" type="bitmap"><region><Rectangle x="116" y= "217" width="8" height="7" /></region></entity>
				
				<entity name="top_right" type="bitmap"><region><Rectangle x="124" y= "190" width="6" height="6" /></region></entity>
				<entity name="mid_right" type="bitmap"><region><Rectangle x="124" y= "196" width="6" height="21" /></region></entity>
				<entity name="btm_right" type="bitmap"><region><Rectangle x="124" y= "217" width="6" height="7" /></region></entity>

			</entities>
		</template>
		
		
		<template name="pressed_button_shiny_large" asset="$asset">
			<entities>
				<entity name="top_left" type="bitmap"><region><Rectangle x="140" y= "190" width="6" height="6" /></region></entity>
				<entity name="mid_left" type="bitmap"><region><Rectangle x="140" y= "196" width="6" height="21" /></region></entity>
				<entity name="btm_left" type="bitmap"><region><Rectangle x="140" y= "217" width="6" height="7" /></region></entity>

				<entity name="top_center" type="bitmap"><region><Rectangle x="146" y= "190" width="8" height="6" /></region></entity>
				<entity name="mid_center" type="bitmap"><region><Rectangle x="146" y= "196" width="8" height="21" /></region></entity>
				<entity name="btm_center" type="bitmap"><region><Rectangle x="146" y= "217" width="8" height="7" /></region></entity>

				<entity name="top_right" type="bitmap"><region><Rectangle x="154" y= "190" width="6" height="6" /></region></entity>
				<entity name="mid_right" type="bitmap"><region><Rectangle x="154" y= "196" width="6" height="21" /></region></entity>
				<entity name="btm_right" type="bitmap"><region><Rectangle x="154" y= "217" width="6" height="7" /></region></entity>

			</entities>
		</template>
		
		<template name="hovering_button_shiny_large" asset="$asset">
			<entities>
				<entity name="top_left" type="bitmap"><region><Rectangle x="170" y= "190" width="6" height="6" /></region></entity>
				<entity name="mid_left" type="bitmap"><region><Rectangle x="170" y= "196" width="6" height="21" /></region></entity>
				<entity name="btm_left" type="bitmap"><region><Rectangle x="170" y= "217" width="6" height="7" /></region></entity>

				<entity name="top_center" type="bitmap"><region><Rectangle x="176" y= "190" width="8" height="6" /></region></entity>
				<entity name="mid_center" type="bitmap"><region><Rectangle x="176" y= "196" width="8" height="21" /></region></entity>
				<entity name="btm_center" type="bitmap"><region><Rectangle x="176" y= "217" width="8" height="7" /></region></entity>

				<entity name="top_right" type="bitmap"><region><Rectangle x="184" y= "190" width="6" height="6" /></region></entity>
				<entity name="mid_right" type="bitmap"><region><Rectangle x="184" y= "196" width="6" height="21" /></region></entity>
				<entity name="btm_right" type="bitmap"><region><Rectangle x="184" y= "217" width="6" height="7" /></region></entity>

			</entities>
		</template>
		
		<template name="disabled_button_shiny_large" asset="$asset">
			<entities>
				<entity name="top_left" type="bitmap"><region><Rectangle x="200" y= "190" width="6" height="6" /></region></entity>
				<entity name="mid_left" type="bitmap"><region><Rectangle x="200" y= "196" width="6" height="21" /></region></entity>
				<entity name="btm_left" type="bitmap"><region><Rectangle x="200" y= "217" width="6" height="7" /></region></entity>

				<entity name="top_center" type="bitmap"><region><Rectangle x="206" y= "190" width="8" height="6" /></region></entity>				
				<entity name="mid_center" type="bitmap"><region><Rectangle x="206" y= "196" width="8" height="21" /></region></entity>
				<entity name="btm_center" type="bitmap"><region><Rectangle x="206" y= "217" width="8" height="7" /></region></entity>

				<entity name="top_right" type="bitmap"><region><Rectangle x="214" y= "190" width="6" height="6" /></region></entity>
				<entity name="mid_right" type="bitmap"><region><Rectangle x="214" y= "196" width="6" height="21" /></region></entity>
				<entity name="btm_right" type="bitmap"><region><Rectangle x="214" y= "217" width="6" height="7" /></region></entity>
			</entities>
		</template>
	</templates>
	
	<!-- markup for layout drawer -->
	
	<layouts>
		<layout name="button_shiny_large" transparent="true">
			<entities>

				<!-- left -->
				
				<entity name="top_left" id="0">
					<region><Rectangle x="0" y="0" width="6" height="6" /></region>
					<scale horizontal="fixed" vertical="fixed" />
				</entity>

				<entity name="mid_left" id="0">
					<region><Rectangle x="0" y="6" width="6" height="21" /></region>
					<scale horizontal="fixed" vertical="strech" />
				</entity>
				
				<entity name="btm_left" id="0">
					<region><Rectangle x="0" y="27" width="6" height="7" /></region>
					<scale horizontal="fixed" vertical="move" />
				</entity>
				
				<!-- center -->
				
				<entity name="top_center" id="1">
					<region><Rectangle x="6"  y="0" width="8" height="6" /></region>
					<scale horizontal="strech" vertical="fixed" />
				</entity>
				
				<entity name="mid_center" id="1">
					<region><Rectangle x="6"  y="6" width="8" height="21" /></region>
					<scale horizontal="strech" vertical="strech" />
				</entity>
				
				<entity name="btm_center" id="1">
					<region><Rectangle x="6"  y="27" width="8" height="7" /></region>
					<scale horizontal="strech" vertical="move" />
				</entity>
				
				<!-- right -->
				
				<entity name="top_right" id="2">
					<region><Rectangle x="14" y="0" width="6" height="6" /></region>
					<scale horizontal="move" vertical="fixed" />
				</entity>
	
				<entity name="mid_right" id="2">
					<region><Rectangle x="14" y="6" width="6" height="21" /></region>
					<scale horizontal="move" vertical="strech" />
				</entity>
				
				<entity name="btm_right" id="2">
					<region><Rectangle x="14" y="27" width="6" height="7" /></region>
					<scale horizontal="move" vertical="move" />
				</entity>
				
			</entities>
		</layout>
	</layouts>
</skin>