<?xml version="1.0"?>
<skin name="border_6" version="0.0">

	<!-- shared variables -->
	
	<variables>
		<variable key="asset"	value="habbo_bitmap_skin2_png"	type="String" />
	</variables>
	
	<!-- the following maps layouts for render states -->
	
	<states>
		<state name="default"  layout="border_6" template="border_6" />
		<state name="active"   layout="border_6" template="border_6" />
		<!--
		<state name="pressed"  layout="border_outline" template="default_border" />
		<state name="selected" layout="border_outline" template="default_border" />
		-->
	</states>
	
	<!-- templates defines regions in bitmap asset -->
	
	<templates>
		
		<template name="border_6" asset="$asset">
			<entities>
				<entity name="top_left" type="bitmap"><region><Rectangle x="80" y= "10" width="8" height="8" /></region></entity>
				<entity name="top_center" type="bitmap"><region><Rectangle x="88" y= "10" width="4" height="8" /></region></entity>
				<entity name="top_right" type="bitmap"><region><Rectangle x="92" y= "10" width="8" height="8" /></region></entity>
				
				<entity name="mid_left" type="bitmap"><region><Rectangle x="80" y= "18" width="8" height="4" /></region></entity>
				<entity name="mid_center" type="bitmap"><region><Rectangle x="88" y= "18" width="4" height="4" /></region></entity>
				<entity name="mid_right" type="bitmap"><region><Rectangle x="92" y= "18" width="8" height="4" /></region></entity>
				
				<entity name="btm_left" type="bitmap"><region><Rectangle x="80" y= "22" width="8" height="8" /></region></entity>
				<entity name="btm_center" type="bitmap"><region><Rectangle x="88" y= "22" width="4" height="8" /></region></entity>
				<entity name="btm_right" type="bitmap"><region><Rectangle x="92" y= "22" width="8" height="8" /></region></entity>
				
			</entities>
		</template>
		
	</templates>
	
	<!-- markup for layout drawer -->
	
	<layouts>
		<layout name="border_6" transparent="true">
			<entities>

				<!-- top left -->
				
				<entity name="top_left" id="0">
					<region><Rectangle x="0" y="0" width="8" height="8" /></region>
					<scale horizontal="fixed" vertical="fixed" />
				</entity>
				
				<!-- top center -->
				
				<entity name="top_center" id="0">
					<region><Rectangle x="8"  y="0" width="16" height="8" /></region>
					<scale horizontal="strech" vertical="fixed" />
				</entity>
				
				<!-- top right -->
				
				<entity name="top_right" id="0">
					<region><Rectangle x="24" y="0" width="8" height="8" /></region>
					<scale horizontal="move" vertical="fixed" />
				</entity>
				
				<!-- mid left -->
				
				<entity name="mid_left" id="0">
					<region><Rectangle x="0" y="8" width="8" height="16" /></region>
					<scale horizontal="fixed" vertical="strech" />
				</entity>
				
				<!-- mid center -->
				
				<entity name="mid_center" id="0">
					<region><Rectangle x="8" y="8" width="16" height="16" /></region>
					<scale horizontal="strech" vertical="strech" />
				</entity>
				
				<!-- mid right -->
				
				<entity name="mid_right" id="0">
					<region><Rectangle x="24" y="8" width="8" height="16" /></region>
					<scale horizontal="move" vertical="strech" />
				</entity>
				
				<!-- btm left -->
				
				<entity name="btm_left" id="0">
					<region><Rectangle x="0" y="24" width="8" height="8" /></region>
					<scale horizontal="fixed" vertical="move" />
				</entity>
				
				<!-- btm center -->
				
				<entity name="btm_center" id="0">
					<region><Rectangle x="8"  y="24" width="16" height="8" /></region>
					<scale horizontal="strech" vertical="move" />
				</entity>
				
				<!-- btm right -->
				
				<entity name="btm_right" id="0">
					<region><Rectangle x="24" y="24" width="8" height="8" /></region>
					<scale horizontal="move" vertical="move" />
				</entity>
				
			</entities>
			
		</layout>
	</layouts>
</skin>